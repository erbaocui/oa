	<insert id="insert">
		INSERT INTO bm_apply(
			id,
			name,
			apply_value,
			first_party,
			remarks,
			enter_value,
			status,
			create_by,
			create_time,
			update_by,
			update_time
		) VALUES (
			#{id},
			#{name},
			#{applyValue},
			#{firstParty},
			#{remarks},
			#{enterValue},
			#{status},
			#{createBy.id},
			#{createTime},
			#{updateBy.id},
			#{updateTime}
		)
	</insert>
	
	<update id="update">
		UPDATE bm_apply SET 	
			name = #{name},
			apply_value = #{applyValue},
			first_party = #{firstParty},
			remarks = #{remarks},
			enter_value = #{enterValue},
			status = #{status},
			create_time = #{createTime},
			update_by = #{updateBy.id},
			update_time = #{updateTime}
		WHERE id = #{id}
	</update>
	
	<delete id="delete">
		DELETE FROM bm_apply
		WHERE id = #{id}
	</delete>
	
</mapper>