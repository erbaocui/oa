		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>-->

	<select id="findAllListByOfficeId"  resultMap="ruleMap" parameterType="Rule">
		SELECT
		<include refid="ruleColumns"/>
		FROM bm_rule a
		<include refid="ruleJoins"/>
		<where>
			<if test ="officeId!= null">
				b.office_id=#{officeId}
			</if>
			<if test ="groupId!= null">
				and a.group_id=#{groupId}
			</if>
		</where>

	</select>
	
	<insert id="insert">
		INSERT INTO bm_rule(
			id,
			name,
			remarks
		) VALUES (
			#{id},
			#{name},
			#{remarks}
		)
	</insert>
	
	<update id="update">
		UPDATE bm_rule SET 	
			name = #{name},
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM bm_rule
		WHERE id = #{id}
	</update>
	
</mapper>