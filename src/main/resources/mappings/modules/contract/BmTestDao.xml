<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thinkgem.jeesite.modules.contract.dao.BmTestDao">
    
	<sql id="bmTestColumns">
		a.id AS "id",
		a.area_id AS "area.id",
		a2.name AS "area.name"
	</sql>
	
	<sql id="bmTestJoins">
		LEFT JOIN sys_area a2 ON a2.id = a.area_id
	</sql>
    
	<select id="get" resultType="BmTest">
		SELECT 
			<include refid="bmTestColumns"/>
		FROM bm_test a
		<include refid="bmTestJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="BmTest">
		SELECT 
			<include refid="bmTestColumns"/>
		FROM bm_test a
		<include refid="bmTestJoins"/>
		<where>
			
			<if test="id != null and id != ''">
				AND a.id = #{id}
			</if>
			<if test="area != null and area.id != null and area.id != ''">
				AND a.area_id = #{area.id}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="BmTest">
		SELECT 
			<include refid="bmTestColumns"/>
		FROM bm_test a
		<include refid="bmTestJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO bm_test(
			id,
			area_id
		) VALUES (
			#{id},
			#{area.id}
		)
	</insert>
	
	<update id="update">
		UPDATE bm_test SET 	
			area_id = #{area.id}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		DELETE FROM bm_test
		WHERE id = #{id}
	</update>
	
</mapper>